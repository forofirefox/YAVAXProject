<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.eduadogurrola.yavax.CrearEvento.Foto_evento">

    <android.support.design.widget.AppBarLayout
        android:background="@color/fondo"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/mini"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/back"
                            android:backgroundTint="@color/blanco" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/Nombre"
                        android:paddingTop="6dp"
                        android:paddingLeft="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/blanco"
                        android:textSize="15dp"
                        android:text="Ultimo Paso"
                        android:layout_weight="8"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/Demostracion"
                        android:paddingLeft="15dp"
                        android:textStyle=""
                        android:textColor="@color/GrisFuerte"
                        android:textSize="15dp"
                        android:text="Demostremos la diferencia"
                        android:layout_weight="8"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="12"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:backgroundTint="@color/fondo"
                android:background="@drawable/circulo_comp_blanco"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView2" />
            <ImageView
                android:backgroundTint="@color/blanco"
                android:src="@drawable/brn"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/fotos" />
            <TextView
                android:textColor="@color/Negro"
                android:textSize="16dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:text="Deja una pequeña descripcion"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="17dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="¡Selecciona un icono para tu Grupo!"
                android:textColor="@color/Negro"
                android:textSize="16dp"
                android:layout_above="@+id/imageView2"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <android.support.v7.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/Descip"
                    android:textSize="16dp"
                    android:background="@color/transparent"
                    android:lines="10"
                    android:maxLength="100"
                    android:layout_margin="10dp"
                    android:hint="Solo no peleas, hagan esto mas completo y bonito para el beneficio de todos."
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/siguiente"
                        android:layout_width="95dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:background="@drawable/btn_siguiente"
                        android:text="Finalizar"
                        android:textAlignment="center"
                        android:textColor="@color/Negro"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
