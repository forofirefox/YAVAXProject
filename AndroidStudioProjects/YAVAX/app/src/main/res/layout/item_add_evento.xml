<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#d7000000"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/mini"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/back"
                        android:backgroundTint="@color/blanco" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:paddingTop="6dp"
                    android:paddingLeft="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/blanco"
                    android:textSize="15dp"
                    android:text="Evento"
                    android:layout_weight="8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />

                <TextView
                    android:paddingLeft="15dp"
                    android:textStyle=""
                    android:textColor="@color/GrisFuerte"
                    android:textSize="15dp"
                    android:text="Participa con YAVAX"
                    android:layout_weight="8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp">
            <LinearLayout
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:background="@color/Negro"
                android:layout_weight="8"
                android:layout_width="0dp"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="match_parent"></LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="9"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="9"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:layout_weight="9"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:layout_weight="0.4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"></LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <TextView
                                android:textAlignment="center"
                                android:paddingTop="15dp"
                                android:textStyle="bold"
                                android:textColor="@color/blanco"
                                android:text="Â¡Tenemos hasta un 20% en promociones!"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                        <LinearLayout
                            android:background="@drawable/arcpho"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"></LinearLayout>

                        </LinearLayout>
                    <LinearLayout
                        android:layout_weight="0.4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"></LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="7"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:paddingTop="9dp"
                        android:layout_weight="9"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="@string/Inicia"
                        android:textAlignment="center"
                        android:textColor="@color/blanco"
                        android:textSize="18dp"
                      />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:background="#bb000000"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/CrearEvento"
                    android:textStyle="bold"
                    android:textColor="@color/blanco"
                    android:text="@string/create"
                    android:background="@drawable/btn_privacidad"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                     />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="600dp"></LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

    </LinearLayout>