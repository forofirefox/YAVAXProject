<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.eduadogurrola.yavax.PerfilUsuario.perfil">

    <android.support.design.widget.AppBarLayout
        android:background="@color/fondo"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/mini"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/back"
                            android:backgroundTint="@color/blanco" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/Nombre"
                        android:paddingTop="6dp"
                        android:paddingLeft="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/blanco"
                        android:textSize="15dp"
                        android:text="Eduardo.GG"
                        android:layout_weight="8"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/Demostracion"
                        android:paddingLeft="15dp"
                        android:textStyle=""
                        android:textColor="@color/GrisFuerte"
                        android:textSize="15dp"
                        android:text="Demostremos la diferencia"
                        android:layout_weight="8"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout

        android:orientation="vertical"
        android:layout_weight="12"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout

            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <android.support.v7.widget.CardView
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:background="#4c69f174"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/Visto"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/fondo_perfil_foto">

                            </ImageView>
                            <android.support.v7.widget.CardView
                                android:visibility="visible"
                                android:id="@+id/circulo"
                                android:layout_width="90dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_height="90dp">
                                <com.android.volley.toolbox.NetworkImageView
                                    android:scaleType="centerCrop"
                                    android:id="@+id/FotoPerfil"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    />
                            </android.support.v7.widget.CardView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentStart="true" />

                        </RelativeLayout>
                    </LinearLayout>
                  <LinearLayout
                      android:layout_weight="1"
                      android:layout_width="0dp"
                      android:layout_height="match_parent">

                      <RelativeLayout
                          android:layout_width="match_parent"
                          android:layout_height="match_parent">
                          <ImageView
                              android:layout_gravity="center"
                              android:layout_marginLeft="5dp"
                              android:background="@drawable/eye"
                              android:layout_width="15dp"
                              android:layout_height="15dp"
                              android:backgroundTint="@color/NegroBajo"
                              android:id="@+id/imageView3"
                              android:layout_centerVertical="true"
                              android:layout_toEndOf="@+id/vistas" />
                          <TextView
                              android:paddingTop="10dp"
                              android:textAlignment="center"
                              android:text="Visitas"
                              android:layout_width="match_parent"
                              android:layout_height="30dp"
                              android:layout_above="@+id/imageView3"
                              android:layout_alignParentStart="true"
                              android:id="@+id/textView2" />
                          <TextView
                              android:id="@+id/vistas"
                              android:layout_gravity="center"
                              android:textColor="@color/NegroBajo"
                              android:textStyle="bold"
                              android:textSize="12dp"
                              android:textAlignment="viewEnd"
                              android:text="100"
                              android:layout_width="90dp"
                              android:layout_height="20dp"
                              android:layout_below="@+id/textView2"
                              android:layout_alignParentStart="true" />
                          <Button
                              android:id="@+id/Agregar"
                              android:text="Agregar"
                              android:textColor="#646464"
                              android:layout_width="100dp"
                              android:layout_height="35dp"
                              android:background="@drawable/btn_agregar_completo"
                              android:textAllCaps="false"
                              android:layout_above="@+id/textView2"
                              android:layout_centerHorizontal="true" />
                      </RelativeLayout>

                  </LinearLayout>



                </LinearLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"></LinearLayout>
        <LinearLayout
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <android.support.v7.widget.CardView
                        android:layout_margin="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_weight="0.7"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:src="@drawable/ae1"
                                        android:scaleType="centerCrop"
                                        android:id="@+id/ImagenEvento"
                                        android:layout_centerVertical="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp" />
                                    <LinearLayout
                                        android:background="#47000000"
                                        android:layout_centerVertical="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"></LinearLayout>
                                </RelativeLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <TextView
                                    android:id="@+id/Nombrelugar"
                                    android:paddingTop="10dp"
                                    android:text="Nombre del lugar"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp" />
                                <TextView
                                    android:id="@+id/Termino"
                                    android:text="Martes 24"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <Button
                                        android:id="@+id/Unirse"
                                        android:text="Unirse"
                                        android:textColor="#646464"
                                        android:layout_width="100dp"
                                        android:layout_height="35dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:background="@drawable/btn_siguiente"
                                        android:textAllCaps="false" />
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>


                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"></LinearLayout>
                <LinearLayout
                    android:layout_weight="1.5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <Button
                            android:textColor="@color/NegroBajo"
                            android:layout_marginRight="1dp"
                            android:text="Participaciones"
                            android:background="@drawable/btn_login_completo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <Button
                            android:textColor="@color/NegroBajo"
                            android:layout_marginLeft="1dp"
                            android:text="Recuerdos"
                            android:background="@drawable/btn_login_completo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_weight="9"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <RelativeLayout
                        android:id="@+id/Error"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginTop="80dp"
                            android:layout_centerHorizontal="true"
                            android:text="No se encuentran Datos"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />
                        <TextView
                            android:layout_marginTop="100dp"
                            android:layout_centerHorizontal="true"
                            android:text="Proxima Actualizacion"
                            android:textSize="18dp"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />
                        <ImageView

                            android:background="@drawable/nodatos"
                            android:layout_marginTop="135dp"
                            android:layout_centerHorizontal="true"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
