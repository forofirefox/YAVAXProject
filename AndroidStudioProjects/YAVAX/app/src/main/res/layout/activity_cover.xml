<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.eduadogurrola.yavax.CrearEvento.Cover">
    <android.support.design.widget.AppBarLayout
        android:background="@color/fondo"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/mini"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/back"
                            android:backgroundTint="@color/blanco" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/Nombre"
                        android:paddingTop="3dp"
                        android:paddingLeft="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/blanco"
                        android:textSize="15dp"
                        android:text="Â¿Esta vez cobraremos?"
                        android:layout_weight="8"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/Demostracion"
                        android:paddingLeft="15dp"
                        android:textStyle=""
                        android:textColor="@color/GrisFuerte"
                        android:textSize="15dp"
                        android:text="Demostremos la diferencia"
                        android:layout_weight="8"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:backgroundTint="@color/fondo"
                android:background="@drawable/icono"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imageView" />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ScrollView
            android:id="@+id/todo"
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">




                <LinearLayout
                    android:id="@+id/primero1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text1"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:text="Cantidad de personas"
                            android:textColor="@color/Negro" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <EditText
                                android:hint="0"
                                android:maxLines="1"
                                android:layout_gravity="center"
                                android:layout_width="280dp"
                                android:id="@+id/cantidadp"
                                android:inputType="number"
                                android:backgroundTint="@color/verde"
                                android:layout_height="50dp"
                                android:textColor="@color/NegroBajo"
                                android:textSize="19dp" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="85dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:textSize="16dp"
                            android:id="@+id/text2"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:text="Precio por persona ( 0 = a no cover )"
                            android:textColor="@color/Negro" />
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <EditText

                                android:hint="0"
                                android:layout_gravity="center"
                                android:layout_width="280dp"
                                android:id="@+id/precio"
                                android:layout_height="50dp"
                                android:inputType="number"
                                android:backgroundTint="@color/verde"
                                android:textColor="@color/NegroBajo"
                                android:textSize="19dp" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/primera2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="85dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:textAlignment="center"
                            android:text="Total:"
                            android:textColor="@color/Negro" />
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <TextView
                                android:textAlignment="center"
                                android:paddingTop="10dp"
                                android:text="000"
                                android:layout_gravity="center"
                                android:layout_width="280dp"
                                android:id="@+id/total"
                                android:layout_height="50dp"
                                android:backgroundTint="@color/verde"
                                android:textColor="@color/NegroBajo"
                                android:textSize="19dp" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </ScrollView>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="10dp"></LinearLayout>

            <Button
                android:id="@+id/siguiente"
                android:layout_width="95dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:background="@drawable/btn_siguiente"
                android:text="Siguiente"
                android:textAlignment="center"
                android:textColor="@color/Negro"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
