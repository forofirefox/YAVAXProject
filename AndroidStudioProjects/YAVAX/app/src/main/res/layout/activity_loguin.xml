<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    android:orientation="vertical"
    tools:context="com.example.eduadogurrola.yavax.CarLogin.Logueo.Loguin">

    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:backgroundTint="@color/fondo"
                android:layout_marginTop="130dp"
                android:background="@drawable/icono"
                android:layout_centerHorizontal="true"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <Button
                android:layout_marginTop="5dp"
                android:id="@+id/iatras"
                android:backgroundTint="@color/fondo"
                android:background="@drawable/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="9dp" />

        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.CardView
            android:id="@+id/CarFondo"
            android:layout_margin="35dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:textColor="#000000"
                    android:text="Nombe del usuario o correo."
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
                <EditText
                    android:inputType="textWebEditText"
                    android:id="@+id/usuariotxt"
                    android:layout_margin="5dp"
                    android:background="@drawable/fondo_texto"
                    android:layout_weight="0.7"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
                <TextView

                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:textColor="#000"
                    android:text="Contraseña."
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />

                <EditText
                    android:id="@+id/contra"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="0.7"
                    android:background="@drawable/fondo_texto"
                    android:inputType="textWebPassword" />
                <LinearLayout
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <CheckBox
                        android:layout_marginLeft="5dp"
                        android:text="Guardar Contraseña."
                        android:layout_gravity="center"
                        android:layout_width="200dp"
                        android:layout_height="30dp" />
                </LinearLayout>
                <Button
                    android:id="@+id/IniciarSecion"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/blanco"
                    android:text="INICIAR SESIÓN"
                    android:background="@drawable/btn_login_completo"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:textAlignment="textEnd"
            android:textColor="@color/Rojo"
            android:text="¿Olvidaste tu contraseña?"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>
